@model IEnumerable<EployeeViewModel>
@{
    ViewData["Title"] = "Index";
    string ViweDataMessge = ViewData["Message"] as string;

}

<h1>All Employee</h1>


<br />
<br />

<form asp-action="Index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="serchinput" id="serchinput" class="form-control" placeholder="Serch.." />
        </div>
        <div class="col-4">
            <input type="submit" value="Serch" class="btn btn-success" />
        </div>

    </div>
</form>



<<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Phone)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.IsDeleted)</th>
                <th>@Html.DisplayNameFor(D => D.HirangDate)</th>
                <th>@Html.DisplayNameFor(D => D.DateofCreation)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>

                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(M => @employee.Phone)</td>
                    <td>@Html.DisplayFor(M => @employee.Email)</td>
                    <td>@Html.DisplayFor(M => @employee.IsActive)</td>
                    <td>@Html.DisplayFor(M => @employee.IsDeleted)</td>
                    <td>@employee.HirangDate</td>
                    <td>@employee.DateofCreation</td>
                    <partial name="PartialView" model="@employee.Id.ToString(ViweDataMessge)" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Employees :(</h4>
    </div>
}
