@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    string ViweDataMessge = ViewData["Message"] as string;

}

<h1>All Employee</h1>


<br />
<br />

<form asp-action="Index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="serchinput" id="serchinput" class="form-control" placeholder="Serch.." />
        </div>
        <div class="col-4">
            <input type="submit" value="Serch" class="btn btn-success" />
        </div>

    </div>
</form>



<<a asp-action="Creat" class="btn btn-primary">Create Role</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>

                    <td>@role.Id</td>
                    <td>@role.RoleName</td>

                    <partial name="PartialView" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Employees :(</h4>
    </div>
}



