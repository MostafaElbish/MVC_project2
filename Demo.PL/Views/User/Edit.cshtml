@using Demo.BLL.Interfaces

@model UserViewModel
@inject IdepartmentResposty _departmentRepostry;
@{
    ViewData["Title"] = "Edit";
}

@{
    var department = new SelectList(await _departmentRepostry.GetAll(), "Id", "Name");
}

<form asp-controller="Employee" asp-action="Edit">

    <div class="form-group">
        <label asp-for="FirstName" class="col-form-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
 
    <input type="submit" value="Save" class="btn btn-danger" />
    <a  asp-action="Index" class="btn btn-light">Back To List</a>
</form>