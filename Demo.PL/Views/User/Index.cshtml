@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    string ViweDataMessge = ViewData["Message"] as string;

}

<h1>All Users</h1>


<br />
<br />

<form asp-action="Index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="serchinput" id="serchinput" class="form-control" placeholder="Serch.." />
        </div>
        <div class="col-4">
            <input type="submit" value="Serch" class="btn btn-success" />
        </div>

    </div>
</form>





@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.FirstName)</th>
                <th>@Html.DisplayNameFor(D => D.LastName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Roles)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ", user.Roles)</td>
                   
                    
                    <partial name="PartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Uders :(</h4>
    </div>
}

