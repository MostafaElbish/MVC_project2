@model SigninViewmodel
@{
    ViewData["Title"] = "Signin";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Signin</h1>
<div class="main-agileinfo">
	<div asp-validation-summary="All"></div>
	<div class="agileits-top">
		<form asp-action="Signin">
			
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="PassWord" placeholder="Password" required="">
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="Rememberme" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
				</div>
				<input type="submit" value="Singin">
		</form>
		<p>Don't have an Account? <a asp-action="Singup"> Create New Account!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password?</a></p>
	</div>
</div>
@section validation {


	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

